{
  "$kind": "Microsoft.AdaptiveDialog",
  "recognizer": {
    "$kind": "Microsoft.RecognizerSet",
    "recognizers": [
      {
        "$kind": "Microsoft.RegexRecognizer",
        "id": "x",
        "intents": [
          {
            "intent": "codeIntent",
            "pattern": "(?<code>[a-z][0-9])"
          },
          {
            "intent": "sameIntent",
            "pattern": "same"
          }
        ],
        "entities": [
          { "$kind": "Microsoft.AgeEntityRecognizer" },
          { "$kind": "Microsoft.NumberEntityRecognizer" },
          { "$kind": "Microsoft.PercentageEntityRecognizer" },
          { "$kind": "Microsoft.PhoneNumberEntityRecognizer" },
          { "$kind": "Microsoft.TemperatureEntityRecognizer" }
        ]
      },
      {
        "$kind": "Microsoft.RegexRecognizer",
        "id": "y",
        "intents": [
          {
            "intent": "colorIntent",
            "pattern": "(?i)(color|colour)"
          },
          {
            "intent": "sameIntent",
            "pattern": "same"
          }
        ],
        "entities": [
          { "$kind": "Microsoft.UrlEntityRecognizer" },
          {

            "$kind": "Microsoft.RegexEntityRecognizer",
            "name": "color",
            "pattern": "(?i)(red|green|blue|purple|orange|violet|white|black)"
          },
          {

            "$kind": "Microsoft.RegexEntityRecognizer",
            "name": "backgroundColor",
            "pattern": "(?i)(back|background)"
          },
          {

            "$kind": "Microsoft.RegexEntityRecognizer",
            "name": "foregroundColor",
            "pattern": "(?i)(foreground|front) {color}"
          }
        ]
      }
    ]
  },
  "autoEndDialog": false,
  "triggers": [
    {
      "$kind": "Microsoft.OnBeginDialog",
      "actions": [
        {
          "$kind": "Microsoft.TextInput",
          "prompt": "Welcome to try RecognizerSet, it is the union of of multiple recognizers into one RecognizerResult. "
        }
      ]
    },
    {
      "$kind": "Microsoft.OnIntent",
      "intent": "codeIntent",
      "actions": [
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "Intent: codeIntent, Entities: @{turn.recognized.entities}"
        }
      ]
    },
    {
      "$kind": "Microsoft.OnIntent",
      "intent": "colorIntent",
      "actions": [
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "Intent: colorIntent, Entities: @{turn.recognized.entities}"
        }
      ]
    },
    {
      "$kind": "Microsoft.OnIntent",
      "intent": "sameIntent",
      "actions": [
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "Intent: sameIntent, Entities: @{turn.recognized.entities}"
        }
      ]
    },
    {
      "$kind": "Microsoft.OnUnknownIntent",
      "actions": [
        {
          "$kind": "Microsoft.SendActivity",
          "activity": "UnknownIntent: @{join(turn.recognized.entities, ',')}"
        }
      ]
    }
  ],
  "defaultResultProperty": "dialog.result"
}
